{
  "name": "bears-team-18",
  "version": "0.1.0",
  "dependencies": {
    "next": "^5.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "@types/next": "^2.4.8",
    "@types/react": "^16.0.38",
    "@zeit/next-typescript": "^0.0.10",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nodemon": "^1.15.1",
    "prettier": "^1.10.2",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "precommit": "lint-staged",
    "dev": "nodemon server/index.ts",
    "build": "next build && tsc --module commonjs",
    "start": "NODE_ENV=production node build/index.js"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"],
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  }
}
